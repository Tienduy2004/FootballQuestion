<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A1E3AF07"
    tools:context=".XepHang">

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvnameTop1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tienduy2004"
                android:textStyle="bold"
                android:textColor="#FF1744"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tvdiemTop1"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_boder_xanh"
                android:layout_width="80dp"
                android:layout_height="300dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvnameTop2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tienduy2004"
                android:textStyle="bold"
                android:textColor="#FF1744"
                android:textSize="20dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tvdiemTop2"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:background="@drawable/rounded_boder_xanh"
                android:layout_width="80dp"
                android:layout_height="200dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvnameTop3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tienduy2004"
                android:textStyle="bold"
                android:textColor="#FF1744"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:layout_marginTop="200dp"
                />
            <TextView
                android:id="@+id/tvdiemTop3"
                android:gravity="center"
                android:background="@drawable/rounded_boder_xanh"
                android:layout_width="80dp"
                android:layout_height="100dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="70dp"
        android:background="@drawable/rounded_background"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvXepHangDiem"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Điểm của bạn: "
            android:textSize="35dp"
            android:textColor="#FF1744"/>

    </LinearLayout>


</LinearLayout>